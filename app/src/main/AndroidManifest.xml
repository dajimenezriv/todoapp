<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zepo_lifestyle.hack_your_life">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.zepo_lifestyle.hack_your_life.views.MainView"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.zepo_lifestyle.hack_your_life.views.NewHabitView"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zepo_lifestyle.hack_your_life.views.EditHabitView"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zepo_lifestyle.hack_your_life.views.NewProductView"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zepo_lifestyle.hack_your_life.views.NewTaskView"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zepo_lifestyle.hack_your_life.views.NewListView"
            android:screenOrientation="portrait" />
    </application>

</manifest>